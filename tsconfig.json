{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "types": ["@testing-library/jest-native", "jest"],
    "skipLibCheck": true,
    "allowJs": true,
    "paths": {
      "~assets/*": ["./src/assets/*"],
      "~common/*": ["./src/common/*"],
      "~components/*": ["./src/components/*"],
      "~data/*": ["./src/data/*"],
      "~screens/*": ["./src/screens/*"],
      "~store/*": ["./src/store/*"],
      "~styles/*": ["./src/styles/*"],
      "~utils/*": ["./src/utils/*"]
    }
  }
}
